{
  "name": "tool-template",
  "version": "0.1.0",
  "description": "Tool template",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingston/tool-template"
  },
  "license": "MIT",
  "author": "Kingston Tam",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#src/*": {
      "development": "./src/*",
      "default": "./dist/*"
    }
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx -C development src/cli.ts",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "release": "pnpm build && pnpm changeset publish",
    "start": "node dist/cli.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@ktam/lint-node": "0.4.0",
    "@tsconfig/node20": "^20.1.5",
    "@types/node": "~20.17.57",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "~5.7.3",
    "vitest": "3.1.2"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "volta": {
    "node": "22.16.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
